<div class="container">
	<nav class="menu">
		<ul class="active">
			<% for (var i in theme.menu){ %>
				<li><a class="blog-nav-item" href="<%- url_for(theme.menu[i]) %>"><%= i %></a></li>
			<% } %>
		</ul>

		<a class="toggle-nav" href="#">&#9776;</a>

		<form class="search-form" action="//google.com/search" method="get" accept-charset="utf-8">
			<input class="icon" id="search" type="search" name="q" results="0" placeholder="<%= __('SEARCH') %>">
   		<input type="hidden" name="q" value="site:<%- config.url.replace(/^https?:\/\//, '') %>">
		</form>
	</nav>
</div>